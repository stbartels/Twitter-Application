<h1><%= @title %></h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_message', :object => f.object %>
	<%= render 'fields', :f => f %>
	<div class="actions">
		<%= f.submit "Update" %><br />
	</div>
<% end %>

<div>
	<%= gravatar_for @user %>
	<a href="http://gravatar.com/emails" target="_blank">Change</a>
</div>
